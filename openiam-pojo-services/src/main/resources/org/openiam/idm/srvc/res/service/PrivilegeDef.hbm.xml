<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "classpath://hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

    <class name="org.openiam.idm.srvc.res.dto.PrivilegeDef" table="PRIVILEGE_DEF">
        <id name="privilegeId">
            <column name="PRIVILEGE_ID" sql-type="varchar" length="32" not-null="true"/>
        </id>
        <property name="action">
            <column name="ACTION" sql-type="varchar" length="20"/>
        </property>
        <property name="description">
            <column name="DESCRIPTION" sql-type="varchar"/>
        </property>
    </class>
</hibernate-mapping>